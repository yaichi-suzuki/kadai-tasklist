<h1>Tasklist</h1>
<% if logged_in? %>
  <p>ログイン中ユーザ： <%= current_user.name %><p>
<% else %>
  <p>ログインしていません。</p>
<% end %>

<ul>
  <% @tasks.each do |task| %>
    <li>Task_No: <%= link_to task.id, task %> : <%= task.content %> &emsp; 【Status】: <%= task.status %></li>  
  <% end %>
</ul>

<% if logged_in? %>
  <%= link_to '新規Task登録', new_task_path %>
  <%= link_to 'ログアウト', logout_path, method: :delete %>
<% end %>

